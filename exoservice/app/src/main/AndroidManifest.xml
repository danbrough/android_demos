<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="danbroid.exoservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <!--
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name=".ExoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup">

        <activity
            android:name="danbroid.exoservice.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="danbroid.media.service.AudioService"
            android:process=":audioservice">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
                <!--<action android:name="danbroid.nzrp.ACTION_SLEEP_TIMEOUT" />
                <action android:name="danbroid.nzrp.ACTION_SLEEP_TIMEOUT_EXPECTED" />
                <action android:name="danbroid.nzrp.ACTION_SLEEP_TIMEOUT_CHANGED" />-->
            </intent-filter>
        </service>

    </application>

</manifest>